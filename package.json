{
    "name": "emailengine-app",
    "version": "1.14.5",
    "description": "Email Sync Engine",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "test": "grunt",
        "swagger": "./getswagger.sh",
        "build-dist": "npm run licenses && pkg package.json",
        "licenses": "license-report --only=prod --output=html --config license-report-config.json > static/licenses.html"
    },
    "keywords": [
        "IMAP"
    ],
    "author": "Postal Systems OU",
    "license": "AGPL-3.0-or-later",
    "bin": {
        "emailengine": "bin/emailengine.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/postalsys/emailengine.git"
    },
    "bugs": {
        "url": "https://github.com/postalsys/emailengine/issues"
    },
    "homepage": "https://emailengine.app/",
    "dependencies": {
        "@hapi/basic": "6.0.0",
        "@hapi/boom": "9.1.4",
        "@hapi/hapi": "20.2.0",
        "@hapi/inert": "6.0.4",
        "@hapi/vision": "6.1.0",
        "bull": "3.29.2",
        "bull-arena": "3.29.3",
        "dotenv": "10.0.0",
        "email-reply-parser": "1.2.6",
        "exponential-backoff": "3.1.0",
        "express": "4.17.1",
        "google-auth-library": "7.9.2",
        "hapi-pino": "8.4.0",
        "hapi-swagger": "14.2.4",
        "he": "1.2.0",
        "html-to-text": "8.0.0",
        "imapflow": "1.0.74",
        "ioredis": "4.27.9",
        "joi": "17.4.2",
        "jquery": "3.6.0",
        "libmime": "5.0.0",
        "linkifyjs": "2.1.9",
        "mailparser": "3.3.1",
        "mailsplit": "5.2.0",
        "msgpack5": "5.3.2",
        "node-fetch": "2.6.1",
        "node-vault": "0.9.22",
        "nodemailer": "6.6.5",
        "pino": "6.13.3",
        "prom-client": "14.0.0",
        "punycode": "2.1.1",
        "smtp-server": "3.9.0",
        "uuid": "8.3.2",
        "wild-config": "1.5.1"
    },
    "devDependencies": {
        "eslint": "7.32.0",
        "eslint-config-nodemailer": "1.2.0",
        "eslint-config-prettier": "8.3.0",
        "grunt": "1.4.1",
        "grunt-cli": "1.4.3",
        "grunt-eslint": "23.0.0",
        "license-report": "4.5.0",
        "pkg": "5.3.2"
    },
    "pkg": {
        "scripts": [
            "workers/**/*.js"
        ],
        "assets": [
            "static/**/*",
            "views/**/*",
            "lib/lua/**/*",
            "node_modules/bull/lib/commands/**/*",
            "node_modules/swagger-ui-dist/**/*"
        ],
        "_targets": [
            "node16-macos-x64"
        ],
        "outputPath": "dist"
    }
}
