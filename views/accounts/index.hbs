<div class="d-sm-flex align-items-center justify-content-between mb-1">
    <h1 class="h3 mb-0 text-gray-800">Registered accounts</h1>
</div>

{{#if accounts}}
<div class="table-responsive mt-4">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Status</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>

        <tbody>
            {{#each accounts}}
            <tr>
                <td>{{account}}</td>
                <td>{{name}}</td>

                <td>
                    {{type.name}}
                    {{#if type.comment}}
                    <span class="text-muted">({{type.comment}})</span>
                    {{/if}}
                </td>

                <td><span class="badge badge-pill badge-{{stateLabel.type}}" style="cursor:default;" {{#if
                        stateLabel.error}}data-toggle="tooltip" data-placement="top" title="{{stateLabel.error}}"
                        {{/if}}>{{stateLabel.name}}</span>
                </td>

                </td>
                <td style="text-align: right;">
                    <a href="/admin/account/{{account}}?next={{../curpage}}" class="btn btn-info btn-circle btn-sm">
                        <i class="fas fa-user-edit"></i>
                    </a>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div class="list-group">
    <div class="list-group-item">
        No accounts have been registered yet.
    </div>
</div>
{{/if}}

{{#if showPaging}}
<div class="mt-4 mb-4">
    <nav aria-label="Page navigation">
        <ul class="pagination">

            {{#if prevPage}}
            <li class="page-item"><a class="page-link" href="{{prevPage}}">Previous</a></li>
            {{else}}
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            {{/if}}


            {{#each pageLinks}}
            <li class="page-item {{#if active}}active{{/if}}"><a class="page-link" href="{{url}}">{{title}}</a></li>
            {{/each}}

            {{#if nextPage}}
            <li class="page-item"><a class="page-link" href="{{nextPage}}">Next</a></li>
            {{else}}
            <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
            {{/if}}

        </ul>
    </nav>
</div>
{{/if}}